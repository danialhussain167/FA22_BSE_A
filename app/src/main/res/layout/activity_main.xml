<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/bottomCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F3214E"
        app:layout_constraintTop_toBottomOf="@+id/center"
        app:layout_constraintStart_toStartOf="@+id/center"
        />

    <View
        android:id="@+id/bottomRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#009688"
        app:layout_constraintStart_toEndOf="@+id/bottomCenter"
        app:layout_constraintTop_toTopOf="@+id/bottomCenter"
        />

    <View
        android:id="@+id/bottomLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FF9800"
        app:layout_constraintEnd_toStartOf="@+id/bottomCenter"
        app:layout_constraintBottom_toBottomOf="@+id/bottomCenter"
        />


    <View
        android:id="@+id/topCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/center"
        app:layout_constraintStart_toStartOf="@+id/center"
        />

    <View
        android:id="@+id/topRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#043EE7"
        app:layout_constraintBottom_toBottomOf="@id/topCenter"
        app:layout_constraintStart_toEndOf="@id/topCenter"
        />

    <View
        android:id="@+id/topLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#5FFFEF"
        app:layout_constraintBottom_toBottomOf="@id/topCenter"
        app:layout_constraintEnd_toStartOf="@id/topCenter"
        />

    <View
        android:id="@+id/centerLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/center"
        app:layout_constraintEnd_toStartOf="@id/center"
        />

    <View
        android:id="@+id/centerRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F807EC"
        app:layout_constraintTop_toBottomOf="@+id/topRight"
        app:layout_constraintStart_toStartOf="@id/topRight"
        />



</androidx.constraintlayout.widget.ConstraintLayout>